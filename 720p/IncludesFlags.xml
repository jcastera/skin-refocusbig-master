<includes>
	<!--slide view-->
	<include name="flags_Slide-media">
		<control type="grouplist">
			<posx>222</posx>
			<posy>660</posy>
			<width>900</width>
			<height>64</height>
			<itemgap>10</itemgap>
			<orientation>horizontal</orientation>
			<visible>[Control.IsVisible(52) | Control.IsVisible(521) | Control.IsVisible(522)] + IsEmpty(ListItem.Property(ReleaseDate)</visible>
			<control type="image">
				<width>128</width>
				<height>32</height>
				<info>ListItem.StarRating</info>
				<aspectratio align="center">keep</aspectratio>
				<!--<visible>![Window.IsVisible(VideoFiles) | Container.Content(seasons) | Container.Content(musicvideos) | [ListItem.IsFolder + !Container.Content(tvshows)]] + IsEmpty(ListItem.Property(ReleaseDate)) + !SubString(ListItem.Icon,default)</visible>-->
				<visible>!SubString(ListItem.Icon,default) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(musicvideos)]</visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>34</height>
				<aspectratio align="center">keep</aspectratio>
				<texture>$INFO[ListItem.Property(mediaTag-videoResolution),flags/video/resolution/,.png]</texture>
			</control>
				<!--control type="image">
				<width>96</width>
				<height>34</height>
				<aspectratio align="center">keep</aspectratio>
				<texture>$INFO[ListItem.Property(mediaTag-videoFramerate),flags/video/framerate/,.png]</texture>
			</control-->
			<control type="image">
				<width>96</width>
				<height>34</height>
				<texture>$INFO[ListItem.Property(mediaTag-videoCodec),flags/codec/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
			</control>
				<control type="image">
				<width>96</width>
				<height>34</height>
				<texture>$INFO[ListItem.Property(mediaTag-aspectRatio),flags/video/aspectratio/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				</control>
			<control type="image">
				<width>53</width>
				<height>34</height>
				<aspectratio align="center">keep</aspectratio>
				<texture>$INFO[ListItem.Property(mediaTag-audioChannels),flags/audio/,.png]</texture>
			</control>			
			<control type="image">
				<width>96</width>
				<height>34</height>
				<texture>$INFO[ListItem.Property(mediaTag-audioCodec),flags/codec/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
			</control>
			<control type="image">
				<width>96</width>
				<height>34</height>
				<info>Listitem.Art(mediaTag::contentRating)</info>
				<aspectratio align="center">keep</aspectratio>
			</control>
		</control>
	</include>
	<!-- MPAA RATING-->
	<!-- Largex64-->
	<include name="flag_MPAA">
	<control type="image">
				<width>256</width>
				<height>64</height>
				<info>Listitem.Art(mediaTag::contentRating)</info>
				<colordiffuse>Color4</colordiffuse>
				<aspectratio align="center">keep</aspectratio>
				<visible>Container.Content(movies)</visible>
			</control>
	</include>
	<!-- Smallx48-->
	<include name="flag_MPAAx48">
		<control type="image">
			<description>Rated General</description>
			<width>192</width>
			<height>48</height>
			<aspectratio align="center">keep</aspectratio>
			<info>Listitem.Art(mediaTag::contentRating)</info>
			<visible>Container.Content(movies)</visible>
		</control>
	</include>
	<!-- 80x64 (TV)-->
	<include name="flag_MPAA-TV">
		<control type="group">
			<posx>100</posx>
			<posy>1</posy>
			<visible>Container.Content(tvshows)</visible>
			<control type="image">
				<description>Rated TV-G</description>
				<width>80</width>
				<height>64</height>
				<aspectratio align="center">keep</aspectratio>
				<info>Listitem.Art(mediaTag::contentRating)</info>
				<visible>[Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]</visible>
			</control>
		</control>
	</include>
	<!--video info dialog-->
	<include name="flags_Type-info">
		<control type="grouplist" id="100">
			<width>900</width>
			<height>64</height>
			<itemgap>10</itemgap>
			<orientation>horizontal</orientation>
			<control type="image">
				<width>128</width>
				<height>64</height>
				<info>ListItem.StarRating</info>
				<aspectratio align="center">keep</aspectratio>
			</control>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<texture>$INFO[ListItem.Property(mediaTag-videoResolution),flags/video/resolution/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible></visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<texture>$INFO[ListItem.Property(mediaTag-videoCodec),flags/codec/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible></visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<texture>$INFO[ListItem.Property(mediaTag-audioCodec),flags/codec/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible></visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<texture>$INFO[ListItem.Property(mediaTag-aspectRatio),flags/video/aspectratio/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible></visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<info>Listitem.Art(mediaTag::contentRating)</info>
				<aspectratio align="center">keep</aspectratio>
			</control>
			<control type="image" id="99799">
				<width>96</width>
				<height>64</height>
				<texture fallback="empty">$VAR[flag]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible></visible>
			</control>
			<control type="image" id="99899">
				<width>96</width>
				<height>64</height>
				<texture>$VAR[flag_Studio_alt]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible></visible>
			</control>
		</control>
	</include>
	<!--pvr-->
	<include name="flags_PVR">
		<control type="image">
			<width>128</width>
			<height>64</height>
			<aspectratio align="right">keep</aspectratio>
			<include>flag_Channel</include>
		</control>
		<control type="image">
			<width>128</width>
			<height>64</height>
			<aspectratio align="right">keep</aspectratio>
			<texture>$INFO[Listitem.Icon]</texture>
			<visible>stringcompare(Listitem.ChannelName,flags/networks/,.png)</visible>
		</control>
	</include>
</includes>
